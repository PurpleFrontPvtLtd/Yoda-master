<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Registration_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/registration_firsttime" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/registration_name"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/registration_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:hint="@string/registration_name_hint"
            style="@style/EditTextviewStyle"
            android:inputType="textPersonName|textCapWords|textNoSuggestions" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/registration_email"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:hint="@string/registration_email_hint"
            style="@style/EditTextviewStyle"
            android:inputType="textEmailAddress|textNoSuggestions" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/registration_setpassword"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:hint="@string/registration_setpassword_hint"
            style="@style/EditTextviewStyle"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/registration_setpasswordconfirm"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/registration_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:hint="@string/registration_setpasswordconfirm_hint"
            style="@style/EditTextviewStyle"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

        <CheckBox
            android:id="@+id/registration_showpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_Small"
            android:text="@string/registration_showpassword" />

        <Button
            android:id="@+id/registation_submit"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            style="@style/Button_style_tab"
            android:text="@string/registration_submit" />
    </LinearLayout>

</ScrollView>