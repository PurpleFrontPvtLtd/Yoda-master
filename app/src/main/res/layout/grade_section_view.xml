<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/md_white_1000"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/section_name"

                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/grade_section_heading_name"

                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_basic"
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginRight="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/section_head2"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/grade_section_head"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_basic"
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginRight="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/grade2"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/grade_section_name"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_basic"
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginRight="@dimen/text_size_16" ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/branch2"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/grade_branch_name"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_basic"
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginRight="@dimen/text_size_16" ></View>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout1"

            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/md_white_1000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/keyline_1_minus_8dp"

                android:text="@string/subject_section1"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/addsub"
                android:tint="@color/blue"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_add_circle_white_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>
        <com.yodaapp.live.adapter.ExpandableListView
            android:layout_width="wrap_content"
            android:id="@+id/listview"
            android:layout_height="wrap_content"></com.yodaapp.live.adapter.ExpandableListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#f2f2f2"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/sub_assign_layout"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingEnd="@dimen/table_row_default_padding_side"
            android:paddingRight="@dimen/table_row_default_padding_side"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:padding="0dp"
                android:id="@+id/grade_section_view_add_subject"
                android:text="@string/add_subject" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout21"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_1_minus_8dp"

                android:textSize="20sp"
                android:textColor="@color/md_white_1000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/student_section1"/>
        </RelativeLayout>
        <com.yodaapp.live.adapter.ExpandableListView
            android:layout_width="wrap_content"
            android:id="@+id/listview2"
            android:layout_height="wrap_content"></com.yodaapp.live.adapter.ExpandableListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/grade_student_layout"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/black_dot"
            style="@style/SimpleTextviewStyle"
            android:visibility="gone"
            android:text="@string/change_head_teacher"
            android:id="@+id/grade_section_headteacher_change"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/add_stud"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:textColor="@color/blue"
                android:textStyle="bold"

                android:text="@string/student_section_add"
                android:id="@+id/grade_section_student_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:gravity="center"
            android:id="@+id/remove_student"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_red_800"
                android:textStyle="bold"

                style="@style/SimpleTextviewStyle"
                android:text="@string/section_student_view_remove"
                android:id="@+id/student_inactivate"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>