<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/branch_creation_branch_name"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView21" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textNoSuggestions"
            android:hint="@string/branch_creation_branch_name_hint"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:id="@+id/branch_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/address"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView22" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:id="@+id/branch_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/email"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView232" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:id="@+id/branch_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/phone"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView23" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:inputType="phone|textNoSuggestions"
            android:id="@+id/branch_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/facebook"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView24" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/facebook"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:id="@+id/branch_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/website"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView25" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/website"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:id="@+id/branch_website" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timing"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView26" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/timing"
            android:ems="10"
            style="@style/EditTextviewStyle"
            android:id="@+id/branch_timing" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/branch_creation_type_chech"
            style="@style/TextviewStyle_space"
            android:id="@+id/branch_checkbok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/branch_head"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView27" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:id="@+id/spinner" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            style="@style/Button_style2"
            android:layout_marginTop="20dp"
            android:id="@+id/branch_submit"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>