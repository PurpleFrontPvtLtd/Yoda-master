<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"

        android:orientation="vertical">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout3"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:weightSum="1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.89"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
                    android:textSize="20sp"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/owners"
                    android:id="@+id/textView21" />
            </LinearLayout>
        </LinearLayout>


        <com.yodaapp.live.adapter.ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/owners_list"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

              <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout4"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:weightSum="1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.89"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
                    android:textSize="20sp"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/principal"
                    android:id="@+id/textView20" />
            </LinearLayout>
        </LinearLayout>
        <com.yodaapp.live.adapter.ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/principal_list"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout5"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:weightSum="1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.89"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
                    android:textSize="20sp"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/admins"
                    android:id="@+id/textView22" />
            </LinearLayout>
        </LinearLayout>
        <com.yodaapp.live.adapter.ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/admin_list"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:gravity="center"
            android:id="@+id/add_admin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"

                android:layout_height="match_parent"
                style="@style/SimpleTextviewStyle"
                android:text="@string/add_administrator"
                android:id="@+id/student_parient_gaurdian_add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:gravity="center"
            android:id="@+id/remove_admin"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_red_800"
                android:textStyle="bold"

                style="@style/SimpleTextviewStyle"
                android:text="@string/remove_administrator"
                android:id="@+id/student_inactivate"/>
        </LinearLayout>
    </LinearLayout>







</ScrollView>