<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/layout"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parent_branch_details_branch_name"
            style="@style/TextviewStyle_space_MediumBig"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/black_dot"
                android:id="@+id/parent_branch_details_branch_address"
                style="@style/SimpleTextviewStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/black_dot"
                android:layout_height="wrap_content"
                android:id="@+id/parent_branch_details_branch_website"
                style="@style/SimpleTextviewStyle"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/black_dot"
                android:layout_height="wrap_content"
                android:id="@+id/parent_branch_details_branch_email"
                style="@style/SimpleTextviewStyle"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/black_dot"
                android:layout_height="wrap_content"
                android:id="@+id/parent_branch_details_branch_fb"
                style="@style/SimpleTextviewStyle"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/black_dot"
            android:layout_height="wrap_content"
            style="@style/SimpleTextviewStyle"
            android:id="@+id/parent_branch_details_branch_phone"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/black_dot"
                android:layout_height="wrap_content"
                android:id="@+id/parent_branch_details_branch_timing"
                style="@style/SimpleTextviewStyle"/>
        </LinearLayout>
      
    </LinearLayout>

</ScrollView>