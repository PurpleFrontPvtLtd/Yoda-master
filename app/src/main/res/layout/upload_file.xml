<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" style="@style/layout2" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_upload"
            style="@style/TextviewStyle_space_Big"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_upload_message_hint"
            android:inputType="textMultiLine|text|textCapSentences|textNoSuggestions"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:id="@+id/upload_file_message_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/black_dot"
            android:text="@string/file_upload_image"
            style="@style/SimpleTextviewStyle"
            android:layout_height="wrap_content"
            android:id="@+id/file_upload_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/black_dot"
            android:text="@string/file_upload_document"
            style="@style/SimpleTextviewStyle"
            android:visibility="gone"
            android:id="@+id/file_upload_document"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/Button_style2_size"
            android:text="@string/upload"
            android:id="@+id/file_upload_submit"/>

        <TextView
            android:id="@+id/txtPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="30dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="35dp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>