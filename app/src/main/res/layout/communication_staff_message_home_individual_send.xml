<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"  android:layout_width="match_parent"
    android:background="@color/md_grey_100"

    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="@dimen/demo_title_section_margin"
        android:visibility="gone"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/communcations_staff_individual_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/layout2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusable="true"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        android:id="@+id/communcations_staff_individual_layout">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/communcations_staff_individual_layout_linear">

        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mesaagelistrecycelr"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_weight="0.71" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#70bebebe"
        android:layout_height="wrap_content">

        <EditText
            style="@style/edittext_communication_message"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:id="@+id/communcations_staff_individual_send_message" />

        <Button
            style="@style/send_communiction_message"
            android:id="@+id/communcations_staff_individual_send_message_submit" />
    </LinearLayout>


</LinearLayout>