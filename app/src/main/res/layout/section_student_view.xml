<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" style="@style/layout2" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/section_student_view_student_detail"/>

        <ImageButton
            android:id="@+id/section_student_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/no_image1"
            android:background="@drawable/layout_click_gray"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/vieweditprofile_logo_discription" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle_space"
                android:text="@string/section_student_view_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle_space"
                android:id="@+id/section_student_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:text="@string/section_student_view_allergies"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:id="@+id/section_student_allergies" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:text="@string/section_student_view_branch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:id="@+id/section_student_branch"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:text="@string/section_student_view_grade"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:id="@+id/section_student_grade"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:text="@string/section_student_view_year"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:id="@+id/section_student_year"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextviewStyle"
                android:text="@string/section_student_view_section"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SimpleTextviewStyle"
                android:id="@+id/section_student_section"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/section_student_view_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/section_student_parents">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextviewStyle_space_MediumBig"
            android:text="@string/section_student_view_action"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SimpleTextviewStyle"
            android:drawableLeft="@drawable/black_dot"
            android:text="@string/section_student_view_parient_gaurdian_create"
            android:id="@+id/student_parient_gaurdian_create"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SimpleTextviewStyle"
            android:drawableLeft="@drawable/black_dot"
            android:text="@string/section_student_view_parient_gaurdian"
            android:id="@+id/student_parient_gaurdian_add"/>

    </LinearLayout>
</ScrollView>