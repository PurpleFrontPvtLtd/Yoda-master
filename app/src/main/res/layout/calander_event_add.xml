<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/event_name"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView44" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_side"
                android:layout_marginStart="@dimen/image_margin_side"
                android:tint="@color/iconTint"
                android:src="@drawable/ic_assignment_white_24dp"/>

            <EditText
                android:id="@+id/calander_event__add_name"                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/text_margin_side"
                android:layout_marginStart="@dimen/text_margin_side"
                android:background="@android:color/transparent"
                android:hint="@string/event_name"
                android:inputType="textMultiLine|textCapSentences"
                android:textColorHighlight="@color/accentLight"
                android:textColorHint="@color/textLightGray"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginLeft="@dimen/line_separator_margin_side_large"
            android:layout_marginStart="@dimen/line_separator_margin_side_large"
            android:background="@color/lightGray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/details"
            android:visibility="gone"
            style="@style/TextviewStyle_space"
            android:id="@+id/textView45" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_side"
                android:layout_marginStart="@dimen/image_margin_side"
                android:tint="@color/iconTint"
                android:src="@drawable/ic_assignment_white_24dp"/>

            <EditText
                android:id="@+id/calander_event__add_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/text_margin_side"
                android:layout_marginStart="@dimen/text_margin_side"
                android:background="@android:color/transparent"
                android:hint="@string/event_detail"
                android:inputType="textMultiLine|textCapSentences"
                android:textColorHighlight="@color/accentLight"
                android:textColorHint="@color/textLightGray"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginLeft="@dimen/line_separator_margin_side_large"
            android:layout_marginStart="@dimen/line_separator_margin_side_large"
            android:background="@color/lightGray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_side"
                android:layout_marginStart="@dimen/image_margin_side"
                android:tint="@color/iconTint"
                android:src="@drawable/ic_assignment_white_24dp"/>

            <TextView
                android:id="@+id/calander_event__add_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/text_margin_side"
                android:layout_marginStart="@dimen/text_margin_side"
                android:background="@android:color/transparent"
                android:text="@string/start_date"
                android:inputType="textMultiLine|textCapSentences"
                android:textColorHighlight="@color/accentLight"
                android:textColorHint="@color/textLightGray"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginLeft="@dimen/line_separator_margin_side_large"
            android:layout_marginStart="@dimen/line_separator_margin_side_large"
            android:background="@color/lightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin_side"
                android:layout_marginStart="@dimen/image_margin_side"
                android:tint="@color/iconTint"
                android:src="@drawable/ic_assignment_white_24dp"/>

            <TextView
                android:id="@+id/calander_event__add_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/text_margin_side"
                android:layout_marginStart="@dimen/text_margin_side"
                android:background="@android:color/transparent"
                android:text="@string/end_date"
                android:inputType="textMultiLine|textCapSentences"
                android:textColorHighlight="@color/accentLight"
                android:textColorHint="@color/textLightGray"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_separator_height"
            android:layout_marginLeft="@dimen/line_separator_margin_side_large"
            android:layout_marginStart="@dimen/line_separator_margin_side_large"
            android:background="@color/lightGray" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_start"
             android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="20sp"
            android:layout_marginTop="10dp"            android:id="@+id/textView46" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:background="@drawable/layout_border1"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:text="@string/start_date"
            android:id="@+id/calander_event__add_start_datae" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:visibility="gone"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/event_end"
            android:id="@+id/textView48" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/layout_border1"
        android:layout_marginLeft="22dp"
        android:visibility="gone"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="18sp"

            android:text="@string/end_date"
            android:id="@+id/calander_event__add_end_date12" />

</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_22"
            android:visibility="gone"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="@string/school"
            android:id="@+id/textView50" />



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:layout_marginRight="20dp"
            android:visibility="gone"

            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/calander_event__add_school"
                android:spinnerMode="dialog"
                android:entries="@array/planets_array"

                android:layout_marginRight="10dp"
                android:popupTheme="@style/android:Widget.Holo.Light.PopupMenu"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/branch"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_22"

            android:textSize="20sp"
            android:layout_marginTop="10dp"           android:id="@+id/textView51" />




        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/calander_event__add_branch"
                android:spinnerMode="dialog"
                android:entries="@array/planets_array"

                android:layout_marginRight="10dp"
                android:popupTheme="@style/android:Widget.Holo.Light.PopupMenu"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grade"
            android:textStyle="bold"

            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_22"
            android:id="@+id/textView52" />


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/calander_event__add_grade"
                android:spinnerMode="dialog"
                android:entries="@array/planets_array"

                android:layout_marginRight="10dp"
                android:popupTheme="@style/android:Widget.Holo.Light.PopupMenu"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_22"

            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView53" />



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_border1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/calander_event__add_section"
                android:spinnerMode="dialog"
                android:entries="@array/planets_array"

                android:layout_marginRight="10dp"
                android:popupTheme="@style/android:Widget.Holo.Light.PopupMenu"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/create"
            style="@style/Button_style2"
            android:layout_marginBottom="5dp"
            android:background="@color/blue"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="15dp"
            android:id="@+id/calander_event__add_create"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</ScrollView>