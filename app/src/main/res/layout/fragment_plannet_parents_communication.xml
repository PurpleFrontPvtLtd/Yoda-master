<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" style="@style/layout2" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout1"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
            android:textSize="20sp"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/parents_your_child"/>
        </RelativeLayout>
        <ListView
            android:layout_width="wrap_content"
            android:id="@+id/listview"
            android:layout_height="wrap_content"></ListView>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layout2"
            android:layout_height="wrap_content"
            android:background="#919191"
            android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
            android:textSize="20sp"
            android:textColor="@color/md_white_1000"
            android:text="@string/parents_individual_messages"/>
        </RelativeLayout>
        <ListView
            android:layout_width="wrap_content"
            android:id="@+id/listview1"
            android:layout_height="wrap_content"></ListView>


    </LinearLayout>

</LinearLayout>