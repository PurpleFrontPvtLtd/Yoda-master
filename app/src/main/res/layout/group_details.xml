<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by    :"
            android:textStyle="bold"
            android:textSize="19sp"
            android:id="@+id/textView13"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created on    :"
            android:textSize="19sp"
            android:textStyle="bold"

            android:id="@+id/textView15"
            android:layout_below="@+id/textView13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tt"
            android:id="@+id/created_by"
            android:layout_marginLeft="120dp"
            android:textSize="19sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd"
            android:textSize="19sp"

            android:id="@+id/created_on"
            android:layout_alignTop="@+id/textView15"
            android:layout_alignLeft="@+id/created_by"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members"
            android:textSize="21sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:id="@+id/textView57"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Level  :"
            android:textSize="19sp"
            android:textStyle="bold"
            android:id="@+id/textView55"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name :"
            android:textSize="19sp"
            android:textStyle="bold"
            android:id="@+id/textView58"
            android:layout_below="@+id/textView55"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddd"
            android:textSize="19sp"
            android:id="@+id/group_members"
            android:layout_below="@+id/created_on"
            android:layout_alignLeft="@+id/created_on"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dddd"
            android:textSize="19sp"
            android:id="@+id/group_name"
            android:layout_below="@+id/group_members"
            android:layout_alignLeft="@+id/group_members"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members       :"
            android:textSize="19sp"
            android:textStyle="bold"
            android:id="@+id/textView56"
            android:layout_below="@+id/textView58"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:id="@+id/members"
            android:layout_below="@+id/group_name"
            android:layout_alignLeft="@+id/group_name"
            android:layout_alignStart="@+id/group_name" />


    </RelativeLayout>

    </FrameLayout>


